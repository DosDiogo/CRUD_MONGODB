<%-include("top.ejs")%>

<div class="col-6">
    <form action="/login" method="POST">
        <div class="form-group mb-3">
            <label for="email">E-mail:</label>
            <input type="email" name="email" id="" class="form-control" placeholder="Digite o seu username ou e-mail">
        </div>
        <div class="form-group mb-3">
            <label for="password">Senha:</label>
            <input type="password" name="password" id="" class="form-control" placeholder="Digite a sua senha">
        </div>

        <input type="submit" class="btn btn-primary">
    </form>
    <hr />

    <% if(message){ %>    
    <div class="alert alert-danger">
        <%= message %>
    </div>
    <% } %>

    <p>
        <a href="/forgot">Esqueceu sua senha?</a> | <a href="/users/new">Nao possui cadastro?</a>
    </p>
</div>

<%-include("bottom.ejs")%>
 